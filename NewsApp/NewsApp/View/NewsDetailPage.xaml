<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApp.View.NewsDetailPage"
             Title="NewsDetailPage"
             xmlns:viewmodel="clr-namespace:NewsApp.ViewModel"
             x:DataType="viewmodel:NewsDetailViewModel">

    <VerticalStackLayout Spacing="10"
                         Margin="0">

        <Image HeightRequest="250"
               Aspect="Fill"
               Source="{Binding News.ImageUrl}"/>
        <Label Margin="20,0,20,0"
               HorizontalOptions="Start"
               FontSize="Title"
               Text="{Binding News.Title}"/>
         <Label Margin="20,0,20,0"
               HorizontalOptions="Start"
               FontSize="Small"
               Text="{Binding News.Content}"/>

    </VerticalStackLayout>
</ContentPage>
